<Window x:Class="Tiler.TilerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Tiler" Height="300" Width="500">
    <DockPanel Margin="10">
        <WrapPanel HorizontalAlignment="Center" DockPanel.Dock="Top" Margin="0,50,0,10">
            <Button Name="btnOpenFile" Click="btnOpenFile_Click" Width="100" >Open file</Button>
        </WrapPanel>
        <WrapPanel HorizontalAlignment="Center" DockPanel.Dock="Top" Margin="0,0,0,10">
            <TextBlock Name="txtEditor"/>
        </WrapPanel>
        <WrapPanel HorizontalAlignment="Center" DockPanel.Dock="Top" Margin="0,50,0,0">
            <Button Name="btnLaunchTile" Click="btnLaunchTile_Click" Height="20" Width="100">Tile !</Button>
        </WrapPanel>
        <Grid Margin="20">
            <ProgressBar Name="prgBar" Minimum="0" Maximum="100" />
        </Grid>
    </DockPanel>
</Window>
